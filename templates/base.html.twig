<!DOCTYPE html>
<html lang="fr" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Planifique{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/logo.png') }}">

    {# Polices & Icônes #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {% block stylesheets %}
        {{ importmap('app') }}
        <style>
            /* FIX DU TROU BLANC : On force le fond sur toute la hauteur */
            html, body {
                height: 100%;
                background-color: #f8fafc; /* Gris très clair pro */
                font-family: 'Inter', sans-serif;
            }

            /* Navbar Style */
            .navbar-glass {
                background: rgba(255, 255, 255, 0.95);
                backdrop-filter: blur(10px);
                border-bottom: 1px solid rgba(0,0,0,0.05);
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02);
            }
            .nav-link {
                font-weight: 500;
                color: #475569 !important;
                transition: color 0.2s;
            }
            .nav-link:hover, .nav-link.active {
                color: #2563eb !important; /* Bleu primaire */
            }
            .user-avatar {
                width: 32px; height: 32px;
                background: #e2e8f0;
                color: #475569;
                display: flex; align-items: center; justify-content: center;
                border-radius: 50%; font-weight: bold; font-size: 0.8rem;
            }
        </style>
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body class="d-flex flex-column h-100">

{# --- NAVBAR ÉVOLUÉE --- #}
<nav class="navbar navbar-expand-lg navbar-glass sticky-top py-3">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center gap-2" href="{{ path('app_home') }}">
            <img src="{{ asset('img/logo.png') }}" alt="Logo" width="35" height="35" class="d-inline-block align-text-top">
            <span class="fw-bold text-dark tracking-tight">Planifique</span>
        </a>

        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            {% if app.user %}
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link px-3 {{ app.request.attributes.get('_route') == 'app_home' ? 'active' }}" href="{{ path('app_home') }}">
                            <i class="fas fa-home me-1"></i> Accueil
                        </a>
                    </li>
                    {% if not is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link px-3 {{ app.request.attributes.get('_route') starts with 'app_dispo' ? 'active' }}" href="{{ path('app_dispo_index') }}">
                                <i class="fas fa-clock me-1"></i> Mon Planning
                            </a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link px-3" href="{{ path('admin') }}">
                                <i class="fas fa-user-shield me-1"></i> Administration
                            </a>
                        </li>
                    {% endif %}
                </ul>

                <div class="d-flex align-items-center gap-3">
                    <div class="d-none d-lg-flex align-items-center gap-2 pe-3 border-end">
                        <div class="user-avatar">
                            {{ app.user.firstName|first|upper }}{{ app.user.lastName|first|upper }}
                        </div>
                        <div class="lh-1 text-start">
                            <div class="small fw-bold text-dark">{{ app.user.firstName }}</div>
                            <div class="text-muted" style="font-size: 0.7rem;">
                                {{ app.user.groupe ? app.user.groupe.nom : 'Admin' }}
                            </div>
                        </div>
                    </div>
                    <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger rounded-pill fw-bold px-3">
                        <i class="fas fa-sign-out-alt me-1"></i> Déconnexion
                    </a>
                </div>
            {% else %}
                <div class="ms-auto">
                    <a href="{{ path('connect_microsoft_start') }}" class="btn btn-primary rounded-pill fw-bold px-4 shadow-sm">
                        Connexion
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</nav>

{# Contenu Principal #}
<main class="flex-shrink-0">
    {% block body %}{% endblock %}
</main>

{# Footer optionnel pour fermer le design #}
<footer class="footer mt-auto py-4 text-center text-muted small">
    <div class="container">
        &copy; {{ 'now'|date('Y') }} Planifique Rendez-vous
    </div>
</footer>

</body>
</html>
