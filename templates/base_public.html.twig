{# templates/base_public.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Planifique{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/logo.png') }}">

    {# 1. IMPORTATION DES ICÔNES (FontAwesome) #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {# 2. STYLES #}
    {% block stylesheets %}
        {{ importmap('app') }}
        <style>
            body { background-color: #f3f4f6; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; }
            .fade-in-up { animation: fadeInUp 0.5s ease-out forwards; opacity: 0; transform: translateY(10px); }
            @keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }
            .shadow-calendly { box-shadow: 0 1px 8px rgba(0,0,0,0.08), 0 8px 24px rgba(0,0,0,0.04); }
        </style>
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body class="d-flex align-items-center justify-content-center min-vh-100 py-4 position-relative">

{# --- ZONE DE MESSAGES FLASH (AJOUTÉE) --- #}
<div style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); z-index: 9999; width: 90%; max-width: 800px;">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show shadow-lg border-0 mb-2" role="alert">
                {% if label == 'danger' %}
                    <i class="fas fa-exclamation-circle me-2"></i>
                {% elseif label == 'success' %}
                    <i class="fas fa-check-circle me-2"></i>
                {% endif %}
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>
{# ---------------------------------------- #}

{% block body %}{% endblock %}

</body>
</html>
