{% extends 'base_public.html.twig' %}

{% block title %}Confirmé - Planifique{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="card border-0 shadow-lg p-5 text-center" style="max-width: 600px; border-radius: 20px;">

            {# Logo #}
            <div class="mb-4">
                <img src="{{ asset('img/logo.png') }}" alt="Planifique" style="height: 50px; width: auto;">
            </div>

            {# Animation Succès #}
            <div class="mb-4">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-success bg-opacity-10 text-success" style="width: 70px; height: 70px;">
                    <i class="fas fa-check fa-2x"></i>
                </div>
            </div>

            <h1 class="h3 fw-bold text-dark mb-2">Rendez-vous confirmé !</h1>
            <p class="text-muted mb-4">
                Un email de confirmation a été envoyé à <strong>{{ rendezvous.email }}</strong>.
            </p>

            {# RÉCAPITULATIF COMPLET #}
            <div class="bg-light p-4 rounded-3 text-start mb-4 border">

                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-user-circle text-primary me-3 fs-4" style="width: 30px; text-align: center;"></i>
                    <div>
                        <div class="text-uppercase text-muted fw-bold small" style="font-size: 0.7rem;">Conseiller</div>
                        <div class="fw-bold text-dark">{{ rendezvous.conseiller.firstName }} {{ rendezvous.conseiller.lastName }}</div>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <i class="far fa-calendar-check text-success me-3 fs-4" style="width: 30px; text-align: center;"></i>
                    <div>
                        <div class="text-uppercase text-muted fw-bold small" style="font-size: 0.7rem;">Date & Heure</div>
                        <div class="fw-bold text-dark">
                            {{ rendezvous.dateDebut|format_datetime(pattern="EEEE d MMMM yyyy", locale='fr')|capitalize }}
                            <br>
                            {{ rendezvous.dateDebut|date('H:i') }} - {{ rendezvous.dateFin|date('H:i') }}
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <i class="fas fa-stopwatch text-warning me-3 fs-4" style="width: 30px; text-align: center;"></i>
                    <div>
                        <div class="text-uppercase text-muted fw-bold small" style="font-size: 0.7rem;">Durée</div>
                        <div class="fw-bold text-dark">
                            {% set duree = rendezvous.evenement.duree %}
                            {% set hours = (duree / 60)|round(0, 'floor') %}
                            {% set minutes = duree % 60 %}
                            {% if hours > 0 %}{{ hours }} h {% endif %}{{ minutes > 0 ? minutes ~ ' min' : '' }}
                        </div>
                    </div>
                </div>
            </div>

            {# BOUTONS D'ACTION #}
            <div class="d-grid gap-2">
                <a href="https://www.planifique.com/" class="btn btn-primary fw-bold py-3 rounded-pill shadow-sm">
                    Accéder au site PLANIFIQUE
                </a>
            </div>

        </div>
    </div>
{% endblock %}
