{% extends 'base_public.html.twig' %}

{% block title %}Valider le rendez-vous{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-center min-vh-100 py-5" style="background-color: #f8f9fa;">
        <div class="card border-0 shadow-lg overflow-hidden" style="max-width: 600px; width: 100%; border-radius: 16px;">

            {# En-tête #}
            <div class="p-5 text-center text-white" style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);">
                <h1 class="h3 fw-bold mb-2">Récapitulatif</h1>
                <p class="opacity-75 mb-0">Vérifiez les détails avant de confirmer.</p>
            </div>

            <div class="p-5 bg-white">

                {# Bloc Conseiller #}
                <div class="d-flex align-items-center mb-4 pb-4 border-bottom">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light text-primary fw-bold me-3" style="width: 60px; height: 60px; font-size: 1.5rem;">
                        {% if conseiller %}
                            {{ conseiller.firstName|first }}{{ conseiller.lastName|first }}
                        {% else %}
                            <i class="fas fa-users"></i>
                        {% endif %}
                    </div>
                    <div>
                        <div class="small text-muted text-uppercase fw-bold">Rendez-vous avec</div>
                        <div class="fs-5 fw-bold text-dark">
                            {% if conseiller %}
                                {{ conseiller.firstName }} {{ conseiller.lastName }}
                            {% else %}
                                Votre équipe {{ event.groupe.nom }}
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Bloc Date et Heure #}
                <div class="mb-4">
                    <div class="d-flex mb-3">
                        <div class="me-3 text-center" style="width: 24px;"><i class="far fa-calendar-alt text-primary fs-5"></i></div>
                        <div>
                            <div class="fw-bold text-dark text-capitalize">{{ dateDebut|format_datetime(pattern="EEEE d MMMM yyyy", locale='fr') }}</div>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="me-3 text-center" style="width: 24px;"><i class="far fa-clock text-primary fs-5"></i></div>
                        <div>
                            <div class="fw-bold text-dark">{{ dateDebut|date('H:i') }} - {{ dateFin|date('H:i') }}</div>
                            <div class="small text-muted">
                                Durée :
                                {% set hours = (event.duree / 60)|round(0, 'floor') %}
                                {% set minutes = event.duree % 60 %}
                                <span class="fw-bold">
                                {% if hours > 0 %}{{ hours }} h {% endif %}{{ minutes > 0 ? minutes ~ ' min' : '' }}
                            </span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="me-3 text-center" style="width: 24px;"><i class="fas fa-map-marker-alt text-primary fs-5"></i></div>
                        <div>
                            <div class="fw-bold text-dark">{{ lieu }}</div>
                        </div>
                    </div>
                </div>

                {# Bloc Vos Infos #}
                <div class="bg-light p-3 rounded-3 mb-5 border">
                    <div class="small text-muted text-uppercase fw-bold mb-2">Vos coordonnées</div>
                    <div class="fw-bold text-dark">{{ client.prenom }} {{ client.nom }}</div>
                    <div class="text-secondary small">{{ client.email }}</div>
                    <div class="text-secondary small">{{ client.telephone }}</div>
                </div>

                {# Boutons d'action #}
                <div class="d-grid gap-3">
                    {# BOUTON VALIDER avec loader #}
                    <form id="validateForm" action="{{ path('app_booking_finalize', {'eventId': event.id, 'date': dateParam, 'user': userIdParam}) }}" method="GET">
                        <button type="submit" id="validateBtn" class="btn btn-primary btn-lg rounded-pill fw-bold py-3 shadow-sm w-100 position-relative" style="min-height: 56px;">
                            <span id="validateText">Valider</span>
                            <span id="validateLoader" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true" style="position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%);"></span>
                        </button>
                    </form>

                    {# BOUTON REFUSER #}
                    <a href="{{ path('app_booking_calendar', {'eventId': event.id, 'user': userIdParam}) }}"
                       class="btn btn-outline-danger btn-lg rounded-pill fw-bold py-3">
                        Refuser
                    </a>
                </div>

                {# Overlay de chargement #}
                <div id="loadingOverlay" class="position-fixed top-0 start-0 w-100 h-100 d-none align-items-center justify-content-center bg-white" style="z-index: 9999; pointer-events: auto;">
                    <div class="text-center">
                        <div class="spinner-border text-primary mb-4" role="status" style="width: 3rem; height: 3rem; border-width: 4px;">
                            <span class="visually-hidden">Chargement...</span>
                        </div>
                        <h5 class="fw-bold text-dark mb-2">Validation en cours</h5>
                        <p class="text-muted small mb-0">Vérification des disponibilités et réservation de la salle...</p>
                        <p class="text-muted" style="font-size: 0.75rem; margin-top: 0.5rem;">Veuillez patienter</p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        document.getElementById('validateForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('validateBtn');
            const text = document.getElementById('validateText');
            const loader = document.getElementById('validateLoader');
            const overlay = document.getElementById('loadingOverlay');

            // Désactiver le bouton et afficher le loader
            btn.disabled = true;
            text.classList.add('d-none');
            loader.classList.remove('d-none');
            overlay.classList.remove('d-none');

            // Le formulaire va soumettre normalement, le loader restera jusqu'à la redirection
        });
    </script>
{% endblock %}
