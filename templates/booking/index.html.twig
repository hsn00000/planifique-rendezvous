{% extends 'base_public.html.twig' %}

{% block title %}Réserver - {{ event.titre }}{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center min-vh-100 py-5">

        <div class="card border-0 shadow-lg overflow-hidden" style="border-radius: 16px; width: 100%; max-width: 1000px; min-height: 600px;">
            <div class="row g-0 h-100">

                {# --- GAUCHE --- #}
                <div class="col-lg-4 bg-white border-end p-4 p-md-5 d-flex flex-column">
                    <div class="mb-5">
                        <img src="{{ asset('img/logo.png') }}" alt="Planifique" style="height: 40px; width: auto;">
                    </div>

                    <div class="mb-4">
                        <div class="text-muted small text-uppercase fw-bold ls-1 mb-2">Rendez-vous avec</div>

                        <div class="d-flex align-items-center mb-4">
                            {% if conseiller %}
                                <div class="avatar-initials me-3">{{ conseiller.firstName|first }}{{ conseiller.lastName|first }}</div>
                                <div class="fw-bold text-dark h5 mb-0">{{ conseiller.firstName }} {{ conseiller.lastName }}</div>
                            {% else %}
                                <div class="avatar-initials me-3 bg-warning text-dark"><i class="fas fa-users"></i></div>
                                <div>
                                    <div class="fw-bold text-dark h5 mb-0">Notre Équipe</div>
                                    <small class="text-muted">{{ event.groupe.nom|default('Service Client') }}</small>
                                </div>
                            {% endif %}
                        </div>

                        <h1 class="fw-bold h4 mb-3 text-dark">{{ event.titre }}</h1>

                        <div class="d-flex align-items-center text-secondary mb-2">
                            <i class="far fa-clock me-3 text-muted" style="width: 20px; text-align: center;"></i>
                            <span class="fw-bold text-dark">
                            {% set hours = (event.duree / 60)|round(0, 'floor') %}
                                {% set minutes = event.duree % 60 %}
                                {% if hours > 0 %}{{ hours }}h {% endif %}{{ minutes > 0 ? minutes ~ 'min' : '' }}
                        </span>
                        </div>

                        {% if lieuChoisi is defined %}
                            <div class="d-flex align-items-center text-secondary mb-2">
                                <i class="fas fa-map-marker-alt me-3 text-muted" style="width: 20px; text-align: center;"></i>
                                <span class="fw-bold text-dark">{{ lieuChoisi }}</span>
                            </div>
                        {% endif %}
                    </div>

                    <div class="mt-auto">
                        <p class="text-muted small mb-4" style="line-height: 1.5;">{{ event.description|striptags }}</p>

                        {# --- BOUTON RETOUR VERS LE FORMULAIRE --- #}
                        {% set userIdParam = app.request.query.get('user') %}
                        <a href="{{ path('app_booking_form', {'eventId': event.id, 'user': userIdParam}) }}" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                            <i class="fas fa-arrow-left me-2"></i> Modifier mes infos
                        </a>
                    </div>
                </div>

                {# --- DROITE --- #}
                <div class="col-lg-8 bg-white position-relative d-flex flex-column">

                    {# Loader initial - reste affiché jusqu'à ce que le calendrier soit prêt #}
                    <div id="calendar-loader" class="p-4 p-md-5 flex-grow-1 h-100 d-flex flex-column align-items-center justify-content-center position-absolute top-0 start-0 w-100 h-100 bg-white" style="z-index: 1000; pointer-events: auto;">
                        <div class="text-center">
                            <div class="spinner-border text-primary mb-4" role="status" style="width: 3rem; height: 3rem; border-width: 4px;">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                            <h5 class="fw-bold text-dark mb-2">Chargement du calendrier</h5>
                            <p class="text-muted small mb-0">Vérification des disponibilités en cours...</p>
                            <p class="text-muted" style="font-size: 0.75rem; margin-top: 0.5rem;">Cela peut prendre quelques secondes</p>
                        </div>
                    </div>

                    <div id="calendar-container" class="p-4 p-md-5 flex-grow-1 h-100 d-flex flex-column" style="opacity: 0; pointer-events: none;">

                        <div class="mb-4">
                             <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill fw-bold mb-3 text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">
                                Étape 2 sur 3
                            </span>
                            <h2 class="h4 fw-bold mb-1 text-dark mt-2">Sélectionnez une date</h2>
                            <p class="text-muted small">Les créneaux sont affichés sur votre fuseau horaire local.</p>
                        </div>

                        {# Navigation Mois #}
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 class="fw-bold text-capitalize mb-0 text-dark fs-5" id="current-month-label">
                                Chargement...
                            </h4>
                            <div class="d-flex gap-2">
                                <button onclick="changeMonth(-1)" class="btn btn-light btn-sm rounded-circle border" id="prev-month-btn" style="width: 32px; height: 32px;" disabled>
                                    <i class="fas fa-chevron-left text-muted"></i>
                                </button>
                                <button onclick="changeMonth(1)" class="btn btn-light btn-sm rounded-circle border" id="next-month-btn" style="width: 32px; height: 32px;" disabled>
                                    <i class="fas fa-chevron-right text-muted"></i>
                                </button>
                            </div>
                        </div>

                        {# En-têtes #}
                        <div class="calendar-header mb-3 text-center">
                            <div>Lun</div><div>Mar</div><div>Mer</div><div>Jeu</div><div>Ven</div><div>Sam</div><div>Dim</div>
                        </div>

                        {# Mois - Chargement progressif comme Calendly #}
                        <div id="months-wrapper" class="flex-grow-1 position-relative">
                            {% for monthData in slotsByDay %}
                                <div class="month-grid d-none w-100"
                                     data-index="{{ loop.index0 }}"
                                     data-month-key="{{ monthData.label|date('Y-m') }}"
                                     data-label="{{ monthData.label|format_datetime(pattern='MMMM yyyy', locale='fr')|capitalize }}"
                                     data-loaded="true">

                                    <div class="calendar-grid">
                                        {% set firstDay = monthData.days|first %}
                                        {% set startPadding = firstDay.dateObj|date('N') - 1 %}
                                        {% if startPadding > 0 %}
                                            {% for i in 1..startPadding %}<div></div>{% endfor %}
                                        {% endif %}

                                        {% for day in monthData.days %}
                                            {% if day.hasAvailability %}
                                                <button class="btn btn-day {{ day.isToday ? 'today' : '' }}"
                                                        onclick='selectDate(this, {{ day.slots|json_encode|raw }}, "{{ day.dateObj|format_date('full', locale='fr')|capitalize }}", "{{ day.dateObj|date('Y-m-d') }}")'>
                                                    {{ day.dayNum }}
                                                </button>
                                            {% else %}
                                                <div class="day-disabled">{{ day.dayNum }}</div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% else %}
                                <div class="text-center py-5">
                                    <p class="text-muted">Aucune disponibilité.</p>
                                </div>
                            {% endfor %}

                            {# Placeholder pour les mois non chargés #}
                            <div id="month-loading" class="month-grid d-none w-100" style="min-height: 300px;">
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <div class="text-center">
                                        <div class="spinner-border text-primary mb-3" role="status">
                                            <span class="visually-hidden">Chargement...</span>
                                        </div>
                                        <p class="text-muted small mb-0">Chargement du mois...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Panneau Heures #}
                    <div id="slots-panel" class="bg-white border-start h-100 position-absolute top-0 end-0 shadow-lg d-none"
                         style="width: 300px; z-index: 100; transition: transform 0.3s ease;">
                        <div class="p-4 h-100 d-flex flex-column">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h5 class="fw-bold mb-0 text-dark fs-6" id="selected-date-title">Date</h5>
                                <button onclick="closeSlots()" class="btn btn-sm btn-light rounded-circle text-muted">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>

                            <div class="flex-grow-1 overflow-auto custom-scrollbar pe-2">
                                <div class="d-grid gap-2" id="slots-list"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        // Variables globales
        let calendarReady = false;
        let currentIndex = 0;
        let months = Array.from(document.querySelectorAll('.month-grid[data-loaded="true"]'));
        const label = document.getElementById('current-month-label');
        const prevBtn = document.getElementById('prev-month-btn');
        const nextBtn = document.getElementById('next-month-btn');
        const slotsPanel = document.getElementById('slots-panel');
        const monthsWrapper = document.getElementById('months-wrapper');
        const monthLoading = document.getElementById('month-loading');
        const eventId = {{ event.id }};
        const userId = {{ userId|default('null') }};
        const loadedMonths = new Set(); // Cache des mois déjà chargés

        // Initialiser le cache avec les mois déjà chargés
        months.forEach(m => {
            if (m.dataset.monthKey) {
                loadedMonths.add(m.dataset.monthKey);
            }
        });

        function updateCalendar() {
            months.forEach((m, index) => {
                if (index === currentIndex) {
                    m.classList.remove('d-none');
                    label.textContent = m.dataset.label;
                } else {
                    m.classList.add('d-none');
                }
            });
            monthLoading.classList.add('d-none');

            // Activer les boutons seulement si le calendrier est prêt
            if (calendarReady) {
                prevBtn.disabled = false;
                nextBtn.disabled = false;
                prevBtn.style.opacity = '1';
                nextBtn.style.opacity = '1';
            } else {
                prevBtn.disabled = true;
                nextBtn.disabled = true;
                prevBtn.style.opacity = '0.3';
                nextBtn.style.opacity = '0.3';
            }
        }

        // Charger un mois via AJAX (lazy loading comme Calendly)
        async function loadMonth(monthKey) {
            if (loadedMonths.has(monthKey)) {
                return; // Déjà chargé
            }

            // Afficher le loader
            monthLoading.classList.remove('d-none');
            monthLoading.style.display = 'block';

            try {
                const url = `{{ path('app_booking_calendar_month', {'eventId': event.id}) }}?month=${monthKey}${userId ? '&user=' + userId : ''}`;
                const response = await fetch(url);

                if (!response.ok) {
                    throw new Error('Erreur lors du chargement');
                }

                const monthData = await response.json();

                // Créer l'élément HTML pour le mois
                const monthElement = createMonthElement(monthData, monthKey);
                monthsWrapper.insertBefore(monthElement, monthLoading);

                // Mettre à jour la liste des mois
                months = Array.from(document.querySelectorAll('.month-grid[data-loaded="true"]'));

                // Marquer comme chargé
                loadedMonths.add(monthKey);

                // Si c'est le mois actuel, l'afficher
                if (currentIndex === months.length - 1) {
                    updateCalendar();
                }
            } catch (error) {
                console.error('Erreur lors du chargement du mois:', error);
                label.textContent = 'Erreur de chargement';
            } finally {
                monthLoading.classList.add('d-none');
            }
        }

        // Créer l'élément HTML pour un mois
        function createMonthElement(monthData, monthKey) {
            const div = document.createElement('div');
            div.className = 'month-grid d-none w-100';
            div.dataset.monthKey = monthKey;
            div.dataset.loaded = 'true';
            div.dataset.label = monthData.label || '';
            div.dataset.index = months.length; // Index pour la navigation

            const calendarGrid = document.createElement('div');
            calendarGrid.className = 'calendar-grid';

            // Padding pour le premier jour
            if (monthData.days && monthData.days.length > 0) {
                const firstDay = monthData.days[0];
                const firstDate = new Date(firstDay.dateObj + 'T00:00:00');
                const dayOfWeek = firstDate.getDay();
                const startPadding = dayOfWeek === 0 ? 6 : dayOfWeek - 1;
                for (let i = 0; i < startPadding; i++) {
                    calendarGrid.appendChild(document.createElement('div'));
                }
            }

            // Ajouter les jours
            if (monthData.days) {
                monthData.days.forEach(day => {
                    if (day.hasAvailability) {
                        const btn = document.createElement('button');
                        btn.className = 'btn btn-day' + (day.isToday ? ' today' : '');
                        btn.textContent = day.dayNum;

                        // Formater la date pour l'affichage
                        const dateObj = new Date(day.dateObj + 'T00:00:00');
                        const dateText = dateObj.toLocaleDateString('fr-FR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
                        const dateValue = day.dateValue || day.dateObj;

                        btn.onclick = () => selectDate(btn, day.slots, dateText, dateValue);
                        calendarGrid.appendChild(btn);
                    } else {
                        const divDay = document.createElement('div');
                        divDay.className = 'day-disabled';
                        divDay.textContent = day.dayNum;
                        calendarGrid.appendChild(divDay);
                    }
                });
            }

            div.appendChild(calendarGrid);
            return div;
        }

        // Calculer la clé du mois (YYYY-MM) à partir de l'index
        function getMonthKeyFromIndex(index) {
            const now = new Date();
            const targetMonth = new Date(now.getFullYear(), now.getMonth() + index, 1);
            return targetMonth.getFullYear() + '-' + String(targetMonth.getMonth() + 1).padStart(2, '0');
        }

        async function changeMonth(dir) {
            if (!calendarReady) {
                return false;
            }

            const newIndex = currentIndex + dir;

            // Charger le mois suivant/précédent s'il n'est pas encore chargé
            const targetMonthKey = getMonthKeyFromIndex(newIndex);
            if (!loadedMonths.has(targetMonthKey)) {
                await loadMonth(targetMonthKey);
            }

            if (dir === 1 && newIndex < months.length) {
                currentIndex = newIndex;
            } else if (dir === -1 && newIndex >= 0) {
                currentIndex = newIndex;
            }

            updateCalendar();
            closeSlots();
        }

        // Masquer le loader et afficher le calendrier une fois que tout est prêt
        function showCalendar() {
            const loader = document.getElementById('calendar-loader');
            const container = document.getElementById('calendar-container');

            if (!loader || !container) {
                console.error('Éléments du calendrier non trouvés');
                return;
            }

            // Initialiser le calendrier d'abord
            if (months.length > 0) {
                updateCalendar();
            }

            // Masquer le loader et afficher le calendrier
            loader.style.transition = 'opacity 0.3s ease';
            container.style.transition = 'opacity 0.3s ease';

            setTimeout(function() {
                loader.style.opacity = '0';
                setTimeout(function() {
                    // Masquer complètement le loader
                    loader.style.display = 'none';
                    loader.style.visibility = 'hidden';
                    loader.style.pointerEvents = 'none';

                    // Activer le calendrier
                    container.style.opacity = '1';
                    container.style.pointerEvents = 'auto';
                    container.style.visibility = 'visible';

                    // Marquer le calendrier comme prêt
                    calendarReady = true;

                    // Réactiver les boutons de navigation
                    updateCalendar();

                    console.log('Calendrier activé et prêt');
                }, 300);
            }, 100);
        }

        // Attendre que le DOM soit chargé
        function initCalendar() {
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    setTimeout(showCalendar, 100);
                });
            } else {
                // DOM déjà chargé
                setTimeout(showCalendar, 100);
            }
        }

        // Initialiser le calendrier
        initCalendar();

        // Fallback de sécurité : forcer l'activation après 1 seconde maximum
        setTimeout(function() {
            if (!calendarReady) {
                console.log('Fallback: activation forcée du calendrier');
                const loader = document.getElementById('calendar-loader');
                const container = document.getElementById('calendar-container');

                if (loader) {
                    loader.style.display = 'none';
                    loader.style.visibility = 'hidden';
                    loader.style.pointerEvents = 'none';
                    loader.style.opacity = '0';
                }

                if (container) {
                    container.style.opacity = '1';
                    container.style.pointerEvents = 'auto';
                    container.style.visibility = 'visible';
                }

                calendarReady = true;

                if (months.length > 0) {
                    updateCalendar();
                }

                console.log('Calendrier activé par fallback');
            }
        }, 1000);

        function selectDate(btn, slots, dateText, dateValue) {
            // Empêcher la sélection si le calendrier n'est pas encore prêt
            if (!calendarReady) {
                return false;
            }

            document.querySelectorAll('.btn-day').forEach(b => b.classList.remove('active-day'));
            btn.classList.add('active-day');
            document.getElementById('selected-date-title').textContent = dateText;
            const list = document.getElementById('slots-list');
            list.innerHTML = '';

            // Récupération de l'ID User s'il existe dans l'URL pour le transmettre
            const urlParams = new URLSearchParams(window.location.search);
            const userParam = urlParams.get('user');

            slots.forEach(time => {
                const link = document.createElement('a');

                // Lien vers la page de RÉSUMÉ
                let url = `{{ path('app_booking_summary', {'eventId': event.id}) }}?date=${dateValue} ${time}`;

                if (userParam) {
                    url += `&user=${userParam}`;
                }

                link.href = url;
                link.className = 'btn btn-outline-primary fw-bold w-100 py-3 mb-2 slot-btn';
                link.textContent = time;

                // PLUS AUCUN POPUP JS ICI -> C'est direct vers la page résumé

                list.appendChild(link);
            });
            slotsPanel.classList.remove('d-none');
        }

        function closeSlots() {
            slotsPanel.classList.add('d-none');
            document.querySelectorAll('.btn-day').forEach(b => b.classList.remove('active-day'));
        }
    </script>

    <style>
        :root { --primary-color: #2563eb; --primary-light: #eff6ff; }

        .calendar-header, .calendar-grid { display: grid; grid-template-columns: repeat(7, 1fr); gap: 10px; text-align: center; }
        .calendar-header div { font-size: 0.75rem; font-weight: 700; color: #94a3b8; text-transform: uppercase; }

        .btn-day {
            width: 45px; height: 45px; margin: 0 auto; border-radius: 50%; border: 1px solid transparent;
            background-color: #f8fafc; color: var(--primary-color);
            font-weight: 600; font-size: 0.95rem; transition: all 0.2s;
            display: flex; align-items: center; justify-content: center;
        }
        .btn-day:hover, .active-day {
            background-color: var(--primary-color) !important; color: white !important;
            transform: scale(1.1); cursor: pointer;
        }
        .today { border-color: var(--primary-color); background-color: white; }
        .day-disabled { width: 45px; height: 45px; margin: 0 auto; display: flex; align-items: center; justify-content: center; color: #cbd5e1; cursor: default; }

        .avatar-initials {
            width: 48px; height: 48px; background-color: var(--primary-color); color: white;
            border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 1.2rem;
        }

        .slot-btn { border: 1px solid var(--primary-color); color: var(--primary-color); transition: 0.2s; }
        .slot-btn:hover { background-color: var(--primary-color); color: white; transform: translateX(5px); }

        /* Désactiver les interactions pendant le chargement */
        #calendar-container[style*="pointer-events: none"] .btn-day {
            pointer-events: none !important;
            opacity: 0.5;
            cursor: not-allowed !important;
        }
    </style>
{% endblock %}
