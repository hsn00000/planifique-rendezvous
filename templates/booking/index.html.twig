                            <div class="text-center mb-4">
                                <div class="loading-logo-wrapper mb-4" style="animation: fadeInScale 0.8s ease-out;">
                                    <div class="loading-logo">
                                        <img src="{{ asset('img/logo.png') }}" alt="Planifique" style="height: 50px; width: auto; filter: brightness(0) invert(1); animation: gentlePulse 2s ease-in-out infinite;">
                                    </div>
                                </div>
                                <h5 class="fw-bold text-dark mb-2 loading-title" style="animation: fadeInUp 0.8s ease-out 0.3s both;">Planifique prépare votre calendrier</h5>
                                <p class="text-muted small mb-3 loading-text" style="min-height: 1.5rem; animation: fadeInUp 0.8s ease-out 0.5s both;">
                                    <span class="loading-text-item active">Vérification des disponibilités...</span>
                                </p>
                                <div class="progress-wrapper mx-auto" style="max-width: 250px; animation: fadeInUp 0.8s ease-out 0.7s both;">
                                    <div class="progress-bar-animated">
                                        <div class="progress-fill"></div>
                                    </div>
                                </div>
                            </div>
                            
                            {# Services Planifique avec animations améliorées #}
                            <div class="row g-3 justify-content-center mt-4">
                                <div class="col-md-4">
                                    <div class="card border-0 shadow-lg h-100 text-center p-3 service-card" style="border-radius: 12px; animation: fadeInUpScale 0.8s ease-out 1.1s both; background: white;">
                                        <div class="service-icon-wrapper mb-2">
                                            <i class="fas fa-piggy-bank text-primary service-icon" style="font-size: 2rem; position: relative; z-index: 2;"></i>
