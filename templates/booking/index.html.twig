                            <div>Lun</div><div>Mar</div><div>Mer</div><div>Jeu</div><div>Ven</div><div>Sam</div><div>Dim</div>
                        </div>

                        {# Mois - Chargement progressif comme Calendly #}
                        <div id="months-wrapper" class="flex-grow-1 position-relative">
                            {% for monthData in slotsByDay %}
                                <div class="month-grid d-none w-100"
                                     data-index="{{ loop.index0 }}"
                                     data-month-key="{{ monthData.label|date('Y-m') }}"
                                     data-label="{{ monthData.label|format_datetime(pattern='MMMM yyyy', locale='fr')|capitalize }}"
                                     data-loaded="true">

                                    <div class="calendar-grid">
                                        {% set firstDay = monthData.days|first %}
                                        {% set startPadding = firstDay.dateObj|date('N') - 1 %}
                                        {% if startPadding > 0 %}
                                            {% for i in 1..startPadding %}<div></div>{% endfor %}
                                        {% endif %}

                                        {% for day in monthData.days %}
                                            {% if day.hasAvailability %}
                                                <button class="btn btn-day {{ day.isToday ? 'today' : '' }}"
                                                        onclick='selectDate(this, {{ day.slots|json_encode|raw }}, "{{ day.dateObj|format_date('full', locale='fr')|capitalize }}", "{{ day.dateObj|date('Y-m-d') }}")'>
                                                    {{ day.dayNum }}
                                                </button>
                                            {% else %}
                                                <div class="day-disabled">{{ day.dayNum }}</div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% else %}
                                <div class="text-center py-5">
                                    <p class="text-muted">Aucune disponibilité.</p>
                                </div>
