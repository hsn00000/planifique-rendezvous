{# templates/emails/booking_confirmation_client.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmation de rendez-vous</title>
</head>
<body style="margin: 0; padding: 0; background-color: #f4f5f7; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; -webkit-font-smoothing: antialiased;">

{# CONTENEUR PRINCIPAL CENTR√â #}
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #f4f5f7;">
    <tr>
        <td align="center" style="padding: 40px 10px;">

            {# CARTE BLANCHE #}
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 600px; background-color: #ffffff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); overflow: hidden;">

                {# 1. EN-T√äTE BLEU #}
                <tr>
                    <td style="background-color: #2563eb; padding: 30px; text-align: center;">
                        {# Logo en blanc (assurez-vous que le logo existe bien dans public/img/logo.png) #}
                        <img src="{{ absolute_url(asset('img/logo.png')) }}" alt="Planifique" width="150" style="max-width: 150px; height: auto; display: block; margin: 0 auto 20px auto; filter: brightness(0) invert(1);">
                        <h1 style="color: #ffffff; margin: 0; font-size: 24px; font-weight: 600;">Confirmation de rendez-vous</h1>
                    </td>
                </tr>

                {# 2. MESSAGE DE BIENVENUE #}
                <tr>
                    <td style="padding: 40px 40px 20px 40px;">
                        <p style="margin: 0; color: #374151; font-size: 16px; line-height: 24px;">
                            Bonjour <strong>{{ rdv.prenom }}</strong>,
                        </p>
                        <p style="margin: 15px 0 0 0; color: #374151; font-size: 16px; line-height: 24px;">
                            Votre rendez-vous est confirm√©. Nous avons h√¢te de vous rencontrer pour votre entretien <strong>{{ rdv.evenement.titre }}</strong>.
                        </p>
                    </td>
                </tr>

                {# 3. D√âTAILS DU RENDEZ-VOUS (BLOC GRIS) #}
                <tr>
                    <td style="padding: 0 40px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #f9fafb; border-radius: 8px; border: 1px solid #e5e7eb;">
                            <tr>
                                <td style="padding: 20px;">

                                    {# DATE ET HEURE #}
                                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td width="30" style="vertical-align: top; padding-right: 15px;">
                                                <img src="https://img.icons8.com/ios-filled/50/2563eb/calendar--v1.png" width="24" height="24" alt="Date">
                                            </td>
                                            <td style="padding-bottom: 20px;">
                                                <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; font-weight: bold; margin-bottom: 4px;">Quand ?</div>
                                                <div style="font-size: 16px; color: #111827; font-weight: 600;">
                                                    {{ rdv.dateDebut|format_datetime(pattern="EEEE d MMMM yyyy", locale='fr')|title }}
                                                </div>
                                                <div style="font-size: 16px; color: #2563eb; font-weight: 600;">
                                                    de {{ rdv.dateDebut|date('H:i') }} √† {{ rdv.dateFin|date('H:i') }}
                                                </div>
                                            </td>
                                        </tr>
                                    </table>

                                    {# CONSEILLER #}
                                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td width="30" style="vertical-align: top; padding-right: 15px;">
                                                <img src="https://img.icons8.com/ios-filled/50/2563eb/user-male-circle.png" width="24" height="24" alt="Conseiller">
                                            </td>
                                            <td style="padding-bottom: 20px;">
                                                <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; font-weight: bold; margin-bottom: 4px;">Avec qui ?</div>
                                                <div style="font-size: 16px; color: #111827;">
                                                    {{ rdv.conseiller.firstName }} {{ rdv.conseiller.lastName }}
                                                </div>
                                            </td>
                                        </tr>
                                    </table>

                                    {# LIEU #}
                                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                        <tr>
                                            <td width="30" style="vertical-align: top; padding-right: 15px;">
                                                <img src="https://img.icons8.com/ios-filled/50/2563eb/marker.png" width="24" height="24" alt="Lieu">
                                            </td>
                                            <td>
                                                <div style="font-size: 12px; color: #6b7280; text-transform: uppercase; font-weight: bold; margin-bottom: 4px;">O√π ?</div>
                                                <div style="font-size: 16px; color: #111827; font-weight: 600;">
                                                    {% if rdv.typeLieu == 'visio' %}
                                                        üåê En visioconf√©rence (Teams/Zoom)
                                                    {% else %}
                                                        üìç {{ rdv.typeLieu }}
                                                    {% endif %}
                                                </div>

                                                {# Affichage intelligent de l'adresse #}
                                                {% if rdv.adresse %}
                                                    <div style="margin-top: 5px; font-size: 14px; color: #4b5563;">
                                                        {{ rdv.adresse }}
                                                    </div>
                                                    {# Lien Google Maps si c'est un lieu physique #}
                                                    {% if rdv.typeLieu != 'visio' %}
                                                        <div style="margin-top: 8px;">
                                                            <a href="https://www.google.com/maps/search/?api=1&query={{ rdv.adresse|url_encode }}" style="color: #2563eb; text-decoration: none; font-size: 13px; font-weight: 500;">
                                                                Voir sur la carte &rarr;
                                                            </a>
                                                        </div>
                                                    {% endif %}
                                                {% elseif rdv.typeLieu == 'Cabinet-geneve' %}
                                                    <div style="margin-top: 5px; font-size: 14px; color: #4b5563;">Rue de Gen√®ve 12, 1201 Gen√®ve</div>
                                                {% elseif rdv.typeLieu == 'Cabinet-archamps' %}
                                                    <div style="margin-top: 5px; font-size: 14px; color: #4b5563;">Technopole d'Archamps, France</div>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    </table>

                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>

                {# 4. R√âCAPITULATIF INFOS CLIENT #}
                <tr>
                    <td style="padding: 30px 40px;">
                        <h3 style="margin: 0 0 15px 0; font-size: 16px; color: #111827;">Vos coordonn√©es enregistr√©es :</h3>
                        <table width="100%" style="font-size: 14px; color: #4b5563;">
                            <tr>
                                <td style="padding-bottom: 5px; width: 30px;">üìû</td>
                                <td style="padding-bottom: 5px;">{{ rdv.telephone }}</td>
                            </tr>
                            <tr>
                                <td style="width: 30px;">üìß</td>
                                <td>{{ rdv.email }}</td>
                            </tr>
                        </table>
                    </td>
                </tr>

                {# 5. ACTIONS RAPIDES #}
                <tr>
                    <td style="padding: 30px 40px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td align="center" style="padding-bottom: 15px;">
                                    <a href="{{ absolute_url(path('app_booking_modify', {'token': rdv.cancelToken})) }}" 
                                       style="display: inline-block; background-color: #2563eb; color: #ffffff; text-decoration: none; padding: 14px 28px; border-radius: 8px; font-weight: 600; font-size: 15px; margin-right: 10px;">
                                        <i class="fas fa-edit" style="margin-right: 8px;"></i>Modifier ce rendez-vous
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td align="center">
                                    <a href="{{ absolute_url(path('app_booking_cancel', {'token': rdv.cancelToken})) }}" 
                                       style="display: inline-block; background-color: transparent; color: #dc2626; text-decoration: none; padding: 12px 24px; border: 2px solid #dc2626; border-radius: 8px; font-weight: 600; font-size: 14px;">
                                        <i class="fas fa-times" style="margin-right: 8px;"></i>Annuler ce rendez-vous
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>

                {# 6. PIED DE PAGE #}
                <tr>
                    <td style="background-color: #f9fafb; padding: 20px; text-align: center; border-top: 1px solid #e5e7eb;">
                        <p style="margin: 0; font-size: 12px; color: #9ca3af;">
                            Vous pouvez modifier ou annuler ce rendez-vous en utilisant les liens ci-dessus.
                        </p>
                        <p style="margin: 10px 0 0 0; font-size: 12px; color: #d1d5db;">
                            &copy; {{ 'now'|date('Y') }} Planifique - Tous droits r√©serv√©s.
                        </p>
                    </td>
                </tr>

            </table>
        </td>
    </tr>
</table>

</body>
</html>
